<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fl.developer.teleproject.Begin2Activity"
    android:background="#DCDCDC">

    <LinearLayout
        android:id="@+id/searchLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_below="@+id/searchString"
            android:hint="Type your name here"
            android:drawableLeft="@drawable/search"
            android:layout_gravity="center_vertical"
            android:textSize="20dp"
            android:background="@null"
            android:editable="false"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4px"
            android:background="#C0C0C0"
            android:layout_below="@+id/editText"/>

    </LinearLayout>
    <TextView
        android:text="@string/begin2_listView1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleListView1"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#808080"
        android:layout_below="@+id/searchLayout1"
        android:layout_marginLeft="@dimen/activity_vertical_margin"/>

    <ListView
        android:id="@+id/begin2_listView1"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_weight="1"
        android:layout_below="@id/titleListView1"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/activity_vertical_margin">
    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="14px"
        android:background="#DCDCDC"
        android:layout_below="@+id/titleListView1"
        android:layout_marginTop="140dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/begin2_listView2_title"
        android:id="@+id/titleListView2"
        android:layout_below="@+id/begin2_listView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#808080"
        android:layout_marginLeft="@dimen/activity_vertical_margin"/>

    <ListView
        android:id="@+id/begin2_listView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/titleListView2"
        android:layout_marginLeft="@dimen/activity_vertical_margin">
    </ListView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="14px"
        android:background="#DCDCDC"
        android:layout_below="@+id/titleListView2"
        android:layout_marginTop="195dp"/>




</RelativeLayout>
