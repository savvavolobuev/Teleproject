<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp"
    android:background="#333333">

    <ImageView
        android:id="@+id/calendar_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/calendar_background"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_white"/>
    <TextView
        android:id="@+id/header_label"
        android:layout_marginTop="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My vs site scores"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>
    <ImageView
        android:id="@+id/toInfo"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/revving_white"/>
    <ImageView
        android:paddingBottom="16dp"
        android:layout_alignBottom="@id/calendar_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/trend"
        />

    <ImageButton
        android:id="@+id/prev_week"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_below="@id/header_label"
        android:layout_alignEnd="@+id/header_label"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent" />

    <ImageButton
        android:id="@+id/last_week"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/prev_week"
        android:layout_alignTop="@id/prev_week"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"/>

    <TextView
        android:id="@+id/scores_label"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/calendar_back"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Recent daily scores"
        android:gravity="center_horizontal"
        style="@style/additional_text"
        />

    <ImageView
        android:id="@+id/scores_image"
        android:layout_below="@id/scores_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cycle"
        />
</RelativeLayout>