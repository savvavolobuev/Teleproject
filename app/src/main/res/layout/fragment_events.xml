<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fl.developer.teleproject.MainActivity.EventsFragment"
    android:background="#ffe5e5e5">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/eventsHeader"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/scores_label"
            android:text="Events score vs site average"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#808080"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:src="@drawable/settings_grey"
            android:background="@android:color/transparent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentEnd="true" />
    </LinearLayout>

    <view
        class="fl.developer.teleproject.CategoriesView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/eventsListView"
        android:layout_below="@+id/eventsHeader"
        android:layout_alignParentStart="true"
        android:headerDividersEnabled="false"
       android:footerDividersEnabled="false"
        android:divider="#e6e6e6"
        android:dividerHeight="0dp"
        android:childDivider="#f2eef2"
        android:groupIndicator="@android:color/transparent"/>



</RelativeLayout>
